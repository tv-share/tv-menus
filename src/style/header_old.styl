div.header
    width 100%
    font-size 30px
    background #0D3DAD
    min-height 60px
    max-height 60px
    img
        cursor pointer
        max-height 60px
        padding-right 10px
        padding-left 10px
    .title
        color: white
        display inline-block
        vertical-align top
        line-height 60px
        padding-left 10px
        padding-right 10px
    .items
        display inline-block
        vertical-align top
        line-height 60px
        padding-left 10px
        padding-right 10px
        cursor pointer
        > div
            color: white
            display inline-block
            padding-left 10px
            padding-right 10px
        div:hover
            background-color:#4B71C7;
    .options
        float right
        display inline-block
        vertical-align top
        line-height 60px
        padding-left 10px
        padding-right 10px
        cursor pointer
        max-height 60px
        div
            vertical-align top        
            max-height 60px
            color: white
            display inline-block
            padding-left 10px
            padding-right 10px
        div:hover
            background-color:#4B71C7;